<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.example.mapper.BoardMapper">

	<!-- select -->
	<select id="commentList" resultType="Comment">
		SELECT * 
		FROM comment
		WHERE commentB_id = #{commentB_id}
	</select>

	<!-- insert -->
	<insert id="commentInsert" parameterType="Comment">
		INSERT INTO comment
		(	
			commentB_id,
			c_content,
			c_writer,
			c_date
		)VALUES(
			#{commentB_id},
			#{c_content},
			#{c_writer},
			sysdate()
		)
	
	</insert>
	
	
	<!-- update -->
	<update id="commentUpdate" parameterType="Comment">
		UPDATE comment
		SET	c_content = #{c_content}
		WHERE c_id = #{c_id}
		
	</update>

	<!-- delete -->

	<delete id="commentDelete" parameterType="int">
		DELETE FROM comment
		WHERE c_id = #{c_id}
	
	</delete>





</mapper>